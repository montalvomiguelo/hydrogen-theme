<div class="grid w-full justify-items-start gap-8 p-6 py-8 md:p-8 lg:p-12">
  {%- if search.performed -%}
    <h1 class="font-heading text-copy font-heading-weight max-w-prose">{{ 'templates.search.title' | t }}</h1>
  {%- else -%}
    <h1 class="font-heading text-copy font-heading-weight max-w-prose">{{ 'general.search.search' | t }}</h1>
  {%- endif -%}
  <form action="{{ routes.search_url }}" method="get" role="search" class="text-heading relative flex w-full">
    <input type="hidden" name="type" value="product">
    <input
      type="search"
      name="q"
      value="{{ search.terms | escape }}"
      placeholder="{{ 'general.search.search' | t }}"
      class="border-primary/10 text-heading focus:border-primary/90 w-full border-x-0 border-b-2 border-t-0 bg-transparent px-0 py-2 transition focus:ring-0"
    >
    <input name="options[prefix]" type="hidden" value="last">
    <button type="submit" class="absolute right-0 py-2">
      {{ 'general.search.submit' | t }}
    </button>
  </form>
</div>

{% if search.performed %}
  {%- if search.results_count == 0 -%}
    <div class="grid w-full gap-4 px-6 md:gap-8 md:px-8 lg:px-12">
      <p class="text-copy max-w-prose opacity-50">
        {{ 'general.search.no_results_html' | t: terms: search.terms | replace: '*', '' }}
      </p>
    </div>
  {%- endif -%}
  {%- if search.results_count != 0 -%}
    {% paginate search.results by 24 %}
      <div class="grid w-full grid-flow-row grid-cols-2 gap-2 gap-y-6 p-6 sm:grid-cols-3 md:gap-4 md:p-8 lg:grid-cols-4 lg:gap-6 lg:p-12">
        {%- liquid
          for item in search.results
            assign lazy_load = false
            if forloop.index > 2
              assign lazy_load = true
            endif
            render 'card-product', card_product: item, lazy_load: lazy_load
          endfor
        -%}
      </div>
    {% endpaginate %}
  {%- endif -%}
{% endif %}
