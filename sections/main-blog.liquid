{%- paginate blog.articles by 6 -%}
  <div class="grid w-full justify-items-start gap-0 p-6 py-8 md:p-8 lg:p-12">
    {%- content_for 'block', type: 'heading', id: 'heading', wrapper_class: 'max-w-prose-narrow inline-block' -%}

    <div class="grid w-full grid-flow-row grid-cols-2 gap-6 pt-24">
      {%- for article in blog.articles -%}
        <div>
          {%- content_for 'block', type: 'article-card', id: 'article-card', closest.article: article -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
{%- endpaginate -%}

{% schema %}
{
  "name": "Blog posts"
}
{% endschema %}
