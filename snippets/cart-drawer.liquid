{% comment %}
  Renders cart drawer

  Usage:
  {% render 'cart-drawer' %}
{% endcomment %}

<cart-drawer
  class="invisible absolute transition-[visibility] duration-300 [.active&]:visible{% if cart == empty %} is-empty{% endif %}"
  client:idle
>
  <div id="CartDrawer" class="fixed inset-0 z-20 flex h-full w-screen justify-end">
    <div id="CartDrawer-Overlay" class="fixed inset-0 hidden bg-black/25 [.active_&]:block"></div>
    <div
      class="relative flex h-full w-full max-w-lg translate-x-full flex-col overflow-y-auto bg-contrast transition-transform duration-300 [.active_&]:translate-x-0"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.cart.title' | t }}"
      tabindex="-1"
    >
      <div class="flex h-nav shrink-0 items-center justify-between px-6 sm:px-8 md:px-12">
        <h2 class="max-w-prose whitespace-pre-wrap text-lead font-body-weight-bold">{{ 'sections.cart.title' | t }}</h2>
        <button
          type="button"
          class="-m-4 p-4 text-primary transition hover:text-primary/50"
          onclick="this.closest('cart-drawer').close()"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          {%- render 'icon-close' -%}
        </button>
      </div>
      {%- if cart == empty -%}
        <div class="px-6 sm:px-8 md:px-12">
          <p class="text-copy">{{ 'sections.cart.empty' | t }}</p>
        </div>
      {%- endif -%}
      <cart-drawer-items
        {% if cart == empty %}
          class="is-empty"
        {% endif %}
        client:idle
      >
        <form action="{{ routes.cart_url }}" id="CartDrawer-Form" method="post">
          <div
            id="CartDrawer-CartItems"
            class="grid gap-6 px-6 pb-6 md:gap-10 md:px-12 sm-max:pt-2 [.loading&]:pointer-events-none"
          >
            {%- for item in cart.items -%}
              <div id="CartDrawer-Item-{{ item.index | plus: 1 }}" class="cart-item grid grid-cols-[auto_1fr] gap-4">
                <div class="relative flex-shrink">
                  {% if item.image %}
                    {% comment %} Leave empty space due to a:empty CSS display: none rule {% endcomment %}
                    <a href="{{ item.url }}" class="absolute inset-0 h-full w-full" tabindex="-1" aria-hidden="true">
                    </a>
                    <img
                      class="h-24 w-24 rounded border object-cover object-center md:h-28 md:w-28"
                      src="{{ item.image | image_url: width: 300 }}"
                      alt="{{ item.image.alt | escape }}"
                      loading="lazy"
                      width="150"
                      height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
                    >
                  {% endif %}
                </div>
                <div class="flex flex-grow justify-between">
                  <div class="grid gap-2">
                    <h3 class="max-w-prose whitespace-pre-wrap text-copy font-body-weight-bold">
                      <a class="cart-item-name" href="{{ item.url }}">{{ item.product.title | escape }}</a>
                    </h3>
                    {%- if item.product.has_only_default_variant == false
                      or item.properties.size != 0
                      or item.selling_plan_allocation != null
                    -%}
                      <div class="pb-2">
                        <dl class="grid">
                          {%- if item.product.has_only_default_variant == false -%}
                            {%- for option in item.options_with_values -%}
                              <div class="flex max-w-prose whitespace-pre-wrap text-copy text-primary/50">
                                <dt>{{ option.name }}:</dt>
                                <dd>{{ option.value }}</dd>
                              </div>
                            {%- endfor -%}
                          {%- endif -%}

                          {%- for property in item.properties -%}
                            {%- assign property_first_char = property.first | slice: 0 -%}
                            {%- if property.last != blank and property_first_char != '_' -%}
                              <div class="flex max-w-prose whitespace-pre-wrap text-copy text-primary/50">
                                <dt>{{ property.first }}:</dt>
                                <dd>
                                  {%- if property.last contains '/uploads/' -%}
                                    <a
                                      href="{{ property.last }}"
                                      class="link"
                                      target="_blank"
                                      aria-describedby="a11y-new-window-message"
                                    >
                                      {{ property.last | split: '/' | last }}
                                    </a>
                                  {%- else -%}
                                    {{ property.last }}
                                  {%- endif -%}
                                </dd>
                              </div>
                            {%- endif -%}
                          {%- endfor -%}
                        </dl>

                        <p class="flex max-w-prose whitespace-pre-wrap text-copy text-primary/50">
                          {{ item.selling_plan_allocation.selling_plan.name }}
                        </p>

                        <ul role="list" aria-label="{{ 'customer.order.discount' | t }}">
                          {%- for discount in item.discounts -%}
                            <li class="flex items-center gap-2 text-primary/50">
                              {%- render 'icon-discount' -%}
                              {{ discount.title }}
                            </li>
                          {%- endfor -%}
                        </ul>
                      </div>
                    {%- endif -%}

                    <div class="flex items-center gap-2">
                      <quantity-input class="flex min-h-[theme(spacing.10)] max-w-[107px] rounded border" client:idle>
                        <button
                          class="h-10 w-10 shrink-0 text-primary/50 transition hover:text-primary disabled:cursor-wait"
                          type="button"
                          name="minus"
                          aria-label="{{ 'products.product.quantity.decrease' | t: product: item.product.title | escape }}"
                        >
                          &#8722;
                        </button>
                        <input
                          class="w-full flex-grow border-0 bg-transparent p-0 text-center"
                          type="number"
                          name="updates[]"
                          value="{{ item.quantity }}"
                          min="0"
                          aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                          id="Drawer-quantity-{{ item.index | plus: 1 }}"
                          data-index="{{ item.index | plus: 1 }}"
                        >
                        <button
                          class="h-10 w-10 shrink-0 text-primary/50 transition hover:text-primary disabled:cursor-wait"
                          type="button"
                          name="plus"
                          aria-label="{{ 'products.product.quantity.increase' | t: product: item.product.title | escape }}"
                        >
                          &#43;
                        </button>
                      </quantity-input>

                      <cart-remove-button
                        id="CartDrawer-Remove-{{ item.index | plus: 1 }}"
                        data-index="{{ item.index | plus: 1 }}"
                      >
                        <button
                          type="button"
                          class="flex h-10 w-10 items-center justify-center rounded border"
                          aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                        >
                          {% render 'icon-remove' %}
                        </button>
                      </cart-remove-button>
                    </div>
                  </div>
                  <div class="relative text-copy">
                    <div class="loading-overlay absolute right-0 top-0 hidden">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        role="presentation"
                        class="h-5 w-5 animate-spin text-primary"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                      >
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                    </div>
                    {%- if item.original_line_price != item.final_line_price -%}
                      <div class="grid text-right [.loading-overlay:not(.hidden)_+_&]:invisible">
                        <span class="sr-only">{{ 'products.product.price.regular_price' | t }}</span>
                        <s class="text-primary/50">{{ item.original_line_price | money }}</s>
                        <span class="sr-only">{{ 'products.product.price.sale_price' | t }}</span>
                        <span>{{ item.final_line_price | money }}</span>
                      </div>
                    {%- else -%}
                      <div>
                        {{ item.original_line_price | money }}
                      </div>
                    {%- endif -%}
                  </div>
                </div>

                <p
                  id="CartDrawer-LineItemError-{{ item.index | plus: 1 }}"
                  class="col-span-2 text-copy text-primary/50 text-red-500"
                  role="alert"
                ></p>
              </div>
            {%- endfor -%}
            <div class="empty:hidden" id="CartDrawer-CartErrors" role="alert"></div>
            {% if settings.show_cart_note %}
              <cart-note client:idle>
                <div class="grid gap-2 [.is-empty_&]:hidden">
                  <label class="text-copy text-primary" for="Note">{{ 'sections.cart.note' | t }}</label>
                  <textarea
                    class="min-h-[100px] rounded border bg-primary text-contrast"
                    name="note"
                    id="Note"
                    data-cart-note
                  >{{ cart.note }}</textarea>
                </div>
              </cart-note>
            {% endif %}
          </div>
          <p id="CartDrawer-LiveRegionText" class="sr-only" role="status"></p>
          <p id="CartDrawer-LineItemStatus" class="sr-only" aria-hidden="true" role="status">
            {{ 'accessibility.loading' | t }}
          </p>
        </form>
      </cart-drawer-items>
      <div class="mt-auto grid gap-6 border-t p-6 md:px-12 [.is-empty_&]:hidden">
        <div class="grid gap-2">
          <div class="flex items-center justify-between font-body-weight-bold" role="status">
            <h2 class="text-copy">{{ 'sections.cart.subtotal' | t }}</h2>
            <p class="text-copy">{{ cart.total_price | money_with_currency }}</p>
          </div>

          <div class="empty:hidden">
            {%- if cart.cart_level_discount_applications.size > 0 -%}
              <ul role="list" aria-label="{{ 'customer.order.discount' | t }}">
                {%- for discount in cart.cart_level_discount_applications -%}
                  <li class="flex items-center gap-2 text-primary/50">
                    {%- render 'icon-discount' -%}
                    {{ discount.title }}
                    (-{{ discount.total_allocated_amount | money }})
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        </div>

        <p class="text-copy">
          {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
            {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
          {%- elsif cart.taxes_included -%}
            {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
          {%- elsif shop.shipping_policy.body != blank -%}
            {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
          {%- else -%}
            {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
          {%- endif -%}
        </p>

        <div>
          <noscript>
            <button type="submit" class="button bg-primary text-contrast" form="CartDrawer-Form">
              {{ 'sections.cart.update' | t }}
            </button>
          </noscript>

          <button
            type="submit"
            id="CartDrawer-Checkout"
            class="button w-full bg-primary text-contrast"
            name="checkout"
            form="CartDrawer-Form"
            {% if cart == empty %}
              disabled
            {% endif %}
          >
            {{ 'sections.cart.checkout' | t }}
          </button>
        </div>
      </div>
    </div>
  </div>
</cart-drawer>
