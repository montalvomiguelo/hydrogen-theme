{%- doc -%}
  Renders a heading element.

  @param {string} wrapper_class
{%- enddoc -%}

{%- render 'heading',
  content: block.settings.heading,
  size: block.settings.heading_size,
  level: block.settings.heading_level,
  shopify_attributes: block.shopify_attributes,
  class: wrapper_class
-%}

{% schema %}
{
  "name": "Hading",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "",
          "label": "Default"
        },
        {
          "value": "md",
          "label": "Medium"
        },
        {
          "value": "lg",
          "label": "Large"
        },
        {
          "value": "xl",
          "label": "Extra large"
        }
      ],
      "default": "",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_level",
      "options": [
        {
          "value": "div",
          "label": "Div"
        },
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        }
      ],
      "default": "div",
      "label": "Heading level"
    }
  ],
  "presets": [
    {
      "name": "Heading",
      "category": "Basic"
    }
  ]
}
{% endschema %}
