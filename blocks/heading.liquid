{%- doc -%}
  Displays a heading element.

  @param {string} [wrapper_class]
{%- enddoc -%}

{%- liquid
  assign heading_tag = 'div'
  case block.settings.heading_level
    when 'h1'
      assign heading_tag = 'h1'
    when 'h2'
      assign heading_tag = 'h2'
    when 'h3'
      assign heading_tag = 'h3'
  endcase
-%}

<{{ heading_tag }}
  class="{{ wrapper_class }} font-heading font-heading-weight data-[size=xl]:text-display data-[size=lg]:text-heading data-[size=md]:text-lead"
  data-slot="heading"
  data-size="{{ block.settings.heading_size }}"
  {{ block.shopify_attributes }}
>
  {{- block.settings.heading | escape -}}
</{{ heading_tag }}>

{% schema %}
{
  "name": "Heading",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "",
          "label": "Default"
        },
        {
          "value": "md",
          "label": "Medium"
        },
        {
          "value": "lg",
          "label": "Large"
        },
        {
          "value": "xl",
          "label": "Extra large"
        }
      ],
      "default": "",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_level",
      "options": [
        {
          "value": "div",
          "label": "Div"
        },
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        }
      ],
      "default": "div",
      "label": "Heading level"
    }
  ],
  "presets": [
    {
      "name": "Heading",
      "category": "Basic"
    }
  ]
}
{% endschema %}
